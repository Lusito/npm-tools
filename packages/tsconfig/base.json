{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    // "noUncheckedIndexedAccess": true, // fixme
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "importHelpers": true
  }
}
